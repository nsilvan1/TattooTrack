generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Client {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  phone        String
  email        String?
  instagram    String?
  birthDate    DateTime?
  address      String?
  city         String?
  allergies    String?
  medicalNotes String?
  notes        String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  tags         ClientTag[]
  tattoos      Tattoo[]
  references   Reference[]
  appointments Appointment[]
}

model Tag {
  id      String      @id @default(auto()) @map("_id") @db.ObjectId
  name    String      @unique
  color   String
  clients ClientTag[]
}

model ClientTag {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId String @db.ObjectId
  tag      Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId    String @db.ObjectId

  @@unique([clientId, tagId])
}

model Tattoo {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  client      Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId    String    @db.ObjectId
  description String
  bodyPart    String
  date        DateTime?
  price       Float?
  notes       String?
  images      String    @default("[]")
  createdAt   DateTime  @default(now())
}

model Reference {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId  String   @db.ObjectId
  imageUrl  String
  notes     String?
  createdAt DateTime @default(now())
}

model Appointment {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  client          Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId        String        @db.ObjectId
  title           String
  description     String?
  date            DateTime
  startTime       String        // HH:mm format
  estimatedHours  Float         // Estimated duration in hours
  status          String        @default("scheduled") // scheduled, confirmed, in_progress, completed, cancelled
  price           Float?
  depositAmount   Float?        // Valor do sinal
  depositPaid     Boolean       @default(false) // Se o sinal foi pago
  depositPaidAt   DateTime?     // Data do pagamento do sinal
  notes           String?
  googleEventId   String?       // ID do evento no Google Calendar
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  transactions    Transaction[]
}

model Category {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  type         String        // 'income' | 'expense'
  color        String
  icon         String?
  isDefault    Boolean       @default(false)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  @@unique([name, type])
}

model Transaction {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  type          String       // 'income' | 'expense'
  amount        Float
  description   String
  date          DateTime
  category      Category     @relation(fields: [categoryId], references: [id])
  categoryId    String       @db.ObjectId
  appointment   Appointment? @relation(fields: [appointmentId], references: [id], onDelete: SetNull)
  appointmentId String?      @db.ObjectId
  isAutomatic   Boolean      @default(false)
  notes         String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model User {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  username            String    @unique
  password            String    // Senha criptografada
  name                String
  email               String?   // Opcional
  picture             String?
  googleId            String?   @unique // Opcional - para integração Google
  googleEmail         String?   // Email da conta Google conectada
  googleAccessToken   String?
  googleRefreshToken  String?
  googleTokenExpiry   DateTime?
  calendarConnected   Boolean   @default(false)
  lastSyncAt          DateTime? // Data/hora da última sincronização
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}
